# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.adoc]
indent_style = space
indent_size = 4
tab_width = 4

[*.bat]
end_of_line = crlf

[*.java]
indent_style = tab
indent_size = 4
tab_width = 4
max_line_length = 120

[*.gradle]
indent_style = tab
indent_size = 4
tab_width = 4
max_line_length = 120
